<p id="notice">
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/book', user: @user, book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table>
          <thead> 
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100, 100) %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</p>

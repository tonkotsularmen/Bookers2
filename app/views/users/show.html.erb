<h1>Home</h1>
<%= render 'books/book', user: @user, book: @book %>

<h1>Books</h1>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag @user.get_profile_image(100, 100) %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
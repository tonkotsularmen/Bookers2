<p id="notice">
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3"><!--ここから左側部分-->
        <%= render 'books/book', user: @user, book: @book %>
      </div><!--ここまでが左側部分-->
      <div class="col-md-8 offset-md-1"><!--ここから右側部分-->
        <h1>Users</h1>
        <table>
          <thead>
            <th>image</th>
            <th>name</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100, 100) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</p>
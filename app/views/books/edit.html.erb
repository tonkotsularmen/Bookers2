<body>
  <h1>Editing Book</h1>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div>
    <%= f.submit "Update Book" %>
    </div>
    <div>
      <%= link_to "Show", book_path(@book.id) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  <% end %>
</body>
<h1>User info</h1>
<div>
  <% if user.image.attached? %>
    <%= image_tag @user.image, size: "100x100" %><!--image_tag 'ファイル名', オプション-->
  <% else %>
    <%= image_tag 'no_image' size: "100x100" %>
  <% end %>
</div>



<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
<% end %>

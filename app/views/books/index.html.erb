<%= render 'book', user: @user, book: @book %>

<!--ここまでが左側部分-->

<!--ここから右側部分-->
<h2>Books</h2>
<table>
  <thead>
    <tr><th></th><th>Title</th><th>Opinion</th></tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100, 100) %></td>
      <td><%= book.title %></td><td><%= book.body %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>